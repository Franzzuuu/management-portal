{
  "name": "reports-exports-tests",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:exports": "jest src/tests/export-utils.test.js",
    "test:integrity": "jest src/tests/file-integrity.test.js",
    "test:cache": "jest src/tests/cache.test.js"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "extensionsToTreatAsEsm": [".js"],
    "globals": {
      "__DEV__": true
    },
    "testMatch": [
      "**/src/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/lib/*.js",
      "!src/lib/database.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}